@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion Sécurisée";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="font-weight-light my-2">
                        <i class="bi bi-shield-lock-fill me-2"></i> Connexion
                    </h3>
                    <small>Accédez à votre espace SuiviFinancier</small>
                </div>

                <div class="card-body p-5">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Adresse Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Mot de passe</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <label asp-for="Input.RememberMe" class="form-check-label text-muted">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Se connecter
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none text-muted">Mot de passe oublié ?</a>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center py-3 bg-light border-top-0">
                    <div class="small">
                        <span class="text-muted">Pas encore de compte ?</span>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-primary text-decoration-none">Créer un compte</a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="/" class="text-muted small text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Retour à l'accueil
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
