@model IEnumerable<SuiviFinancier.Models.Account>

@{ ViewData["Title"] = "Mes Comptes"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-bank"></i> Portefeuille</h1>
    <a asp-action="Create" class="btn btn-success shadow-sm"><i class="bi bi-plus-lg"></i> Ajouter un compte</a>
</div>

<div class="row g-4">
    @foreach (var item in Model)
    {
        // Logique visuelle selon le type
        string bgClass = "bg-primary"; // Bleu (Courant)
        string icon = "bi-credit-card-2-front";
        string textClass = "text-white";
        
        if (item.Type == "Epargne") { 
            bgClass = "bg-success"; // Vert
            icon = "bi-piggy-bank"; 
        }
        else if (item.Type == "Especes") { 
            bgClass = "bg-warning"; // Jaune
            textClass = "text-dark";
            icon = "bi-cash-stack"; 
        }

        <div class="col-md-6 col-lg-4">
            <div class="card @bgClass @textClass shadow h-100 border-0" style="border-radius: 15px;">
                <div class="card-body position-relative">
                    
                    <div class="dropdown position-absolute top-0 end-0 m-3">
                        <button class="btn btn-link @textClass p-0" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-three-dots-vertical fs-5"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Modifier</a></li>
                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a></li>
                        </ul>
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <i class="bi @icon fs-1 me-3 opacity-75"></i>
                        <div>
                            <h5 class="card-title mb-0 fw-bold">@item.Name</h5>
                            <small class="opacity-75">
                                @(string.IsNullOrEmpty(item.AccountNumber) ? "Compte Personnel" : "**** " + (item.AccountNumber.Length > 4 ? item.AccountNumber.Substring(item.AccountNumber.Length - 4) : item.AccountNumber))
                            </small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <small class="opacity-75 text-uppercase" style="font-size: 0.7rem;">Solde Disponible</small>
                        <h2 class="fw-bold mb-0">
                            @item.Balance.ToString("N2") <span class="fs-5">@item.Currency</span>
                        </h2>
                    </div>

                    @if (item.Type == "Epargne" && item.TargetAmount.HasValue && item.TargetAmount > 0)
                    {
                        var percentage = (int)((item.Balance / item.TargetAmount) * 100);
                        percentage = Math.Min(percentage, 100); // Max 100%

                        <div class="mt-3">
                            <div class="d-flex justify-content-between small mb-1">
                                <span>Objectif : @item.TargetAmount?.ToString("N0") @item.Currency</span>
                                <span class="fw-bold">@percentage%</span>
                            </div>
                            <div class="progress" style="height: 6px; background-color: rgba(255,255,255,0.3);">
                                <div class="progress-bar bg-white" role="progressbar" style="width: @percentage%"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
