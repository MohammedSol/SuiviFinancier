@model IEnumerable<SuiviFinancier.Models.Account>

@{
    ViewData["Title"] = "Mes Comptes";
}

<div class="container mt-4">
    <h1>Mes Comptes Bancaires</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Nouveau Compte</a>
    </p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Type)</th>
                <th>@Html.DisplayNameFor(model => model.Balance)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @if(item.Balance >= 0)
                    {
                        <span class="text-success fw-bold">@item.Balance.ToString("C")</span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold">@item.Balance.ToString("C")</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
