@model SuiviFinancier.Models.Category

@{
    ViewData["Title"] = "Supprimer";
}

<div class="container mt-4">
    <h1>Supprimer</h1>

    <h3>Êtes-vous sûr de vouloir supprimer cette catégorie ?</h3>
    <div class="alert alert-warning">
        Attention : Si vous supprimez cette catégorie, les transactions liées risquent de poser problème par la suite.
    </div>

    <div>
        <h4>Catégorie : @Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Model.Type
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirmer la suppression" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>
