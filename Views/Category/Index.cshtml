@model IEnumerable<SuiviFinancier.Models.Category>

@{ ViewData["Title"] = "Mes Catégories"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-tags"></i> Gestion des Catégories</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="bi bi-plus-lg"></i> Nouvelle Catégorie</a>
</div>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card h-100 border-0 shadow-sm hover-effect">
                <div class="card-body d-flex align-items-center">
                    
                    <div class="flex-shrink-0 d-flex justify-content-center align-items-center rounded-circle me-3 text-white" 
                         style="width: 50px; height: 50px; background-color: @item.Color;">
                        <i class="bi @item.Icon fs-4"></i>
                    </div>

                    <div class="flex-grow-1 overflow-hidden">
                        <h5 class="card-title mb-1 text-truncate" title="@item.Name">@item.Name</h5>
                        <div class="small">
                            @if(item.Type == "Depense") {
                                <span class="text-danger"><i class="bi bi-arrow-down-circle"></i> Dépense</span>
                            } else {
                                <span class="text-success"><i class="bi bi-arrow-up-circle"></i> Revenu</span>
                            }
                        </div>
                    </div>

                    <div class="dropdown">
                        <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-three-dots-vertical fs-5"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil me-2"></i> Modifier</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Supprimer cette catégorie ?');">
                                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-trash me-2"></i> Supprimer</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="card-footer p-1 border-0" style="background-color: @item.Color;"></div>
            </div>
        </div>
    }
</div>

<style>
    .hover-effect:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        transition: all 0.2s ease-in-out;
    }
</style>
