@model SuiviFinancier.Models.Transaction

@{
    ViewData["Title"] = "Supprimer Transaction";
}

<div class="container mt-4">
    <h1>Supprimer la transaction</h1>

    <h3>Êtes-vous sûr ?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Montant</dt>
            <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>

            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@Model.Type</dd>

            <dt class="col-sm-2">Catégorie</dt>
            <dd class="col-sm-10">@Model.Category?.Name</dd>
            
            <dt class="col-sm-2">Compte</dt>
            <dd class="col-sm-10">@Model.Account?.Name</dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>
