@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="text-white me-3">
        <i class="bi bi-person-circle me-2"></i>
        <span class="d-none d-md-inline">@User.Identity?.Name</span>
    </div>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="btn btn-outline-light btn-sm">
            <i class="bi bi-box-arrow-right me-1"></i>
            <span class="d-none d-md-inline">DÃ©connexion</span>
        </button>
    </form>
}
else
{
    <a class="btn btn-outline-light btn-sm me-2" asp-area="Identity" asp-page="/Account/Register">
        <i class="bi bi-person-plus me-1"></i>
        <span class="d-none d-md-inline">S'inscrire</span>
    </a>
    <a class="btn btn-light btn-sm" asp-area="Identity" asp-page="/Account/Login">
        <i class="bi bi-box-arrow-in-right me-1"></i>
        <span class="d-none d-md-inline">Se connecter</span>
    </a>
}
